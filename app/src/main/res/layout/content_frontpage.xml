<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.asusx_series.frontpage.Frontpage"
    tools:showIn="@layout/activity_frontpage"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_pen"
        android:id="@+id/pen"
        android:layout_above="@+id/help"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.ImageButton"
        android:background="@android:color/transparent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_help"
        android:text=""
        android:onClick="showGreetings"
        android:id="@+id/help"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/pen"
        android:background="@android:color/transparent"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_about"
        android:id="@+id/about"
        android:layout_alignTop="@+id/help"
        android:layout_toEndOf="@+id/pen"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/font"
        android:layout_above="@+id/pen"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="42dp" />

</RelativeLayout>
